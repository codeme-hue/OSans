<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  >

  <com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/edit_text_email_old_dialog_change_password"
      android:hint="Email"
      android:inputType="textEmailAddress"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:backgroundTint="@color/endblue"
      android:background="@drawable/bg_rectangle_button"
      />

  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/edit_text_password_dialog_change_password"
      android:hint="Password"
      android:inputType="textPassword"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:background="@drawable/bg_rectangle_button"
      android:backgroundTint="@color/endblue"
      />

  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/edit_text_password_new_dialog_change_password"
      android:hint="Password new"
      android:inputType="textPassword"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:background="@drawable/bg_rectangle_button"
      android:backgroundTint="@color/endblue"
      />

  </com.google.android.material.textfield.TextInputLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    >

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/button_save_password_dialog_change_password"
      android:text="save"
      android:textAllCaps="false"
      android:background="@drawable/bg_rectangle_button"
      android:backgroundTint="@color/colorPrimaryDark"
      android:minWidth="0dp"
      android:minHeight="0dp"
      android:paddingTop="13dp"
      android:paddingRight="16dp"
      android:paddingBottom="13dp"
      android:paddingLeft="16dp"
      android:textColor="@color/colorAccent"
      android:layout_alignParentRight="true"
      android:onClick="buttonSave"
      android:layout_alignParentEnd="true"
      />

    <ProgressBar
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:id="@+id/progress_bar_dialog_change_password"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="13dp"
      android:layout_marginRight="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="13dp"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:visibility="gone"
      />

  </RelativeLayout>

</LinearLayout>